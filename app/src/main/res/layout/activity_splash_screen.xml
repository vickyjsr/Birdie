<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Splash_Screen">

    <View
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:background="@color/primary" />

    <ImageView
        android:id="@+id/iv_topv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp"
        android:layout_below="@id/topview"
        android:background="@drawable/ic_wave_real" />

    <ImageView
        android:id="@+id/introPic"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/chatsy" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/introPic"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_chatsy"
        android:gravity="center"
        android:text="@string/app_name" />

</RelativeLayout>